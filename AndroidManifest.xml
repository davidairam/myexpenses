<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kld.myexpenses"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kld.myexpenses.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kld.myexpenses.ExpensesActivity"
            android:label="My Expenses" />
        <activity
            android:name="com.kld.myexpenses.EditExpense"
            android:label="Edit Expenses"
            android:theme="@android:style/Theme.Holo.Light" />
        <activity
            android:name="com.kld.myexpenses.AddTableActivity"
            android:label="My Expenses"
            android:theme="@android:style/Theme.Holo.Light.Dialog" />
    </application>

</manifest>